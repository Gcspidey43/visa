generator client {
  provider = "prisma-client-js"
}

datasource db {
  // For local development: file:/home/z/my-project/db/custom.db
  // For production (Cloudflare Pages): Use PostgreSQL (Supabase, Neon, etc.)
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id                   String   @id @default(cuid())
  fullName             String
  phoneNumber          String
  email                String
  interestedVisaType   String
  preferredCountry     String
  message              String?
  status               String   @default("new")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model ConsultationBooking {
  id                    String   @id @default(cuid())
  fullName              String
  phoneNumber           String
  email                 String
  consultationType       String
  preferredDate         String
  preferredTime         String
  status                String   @default("pending")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model ContactMessage {
  id         String   @id @default(cuid())
  fullName   String
  email      String
  phoneNumber String?
  subject    String?
  message    String
  status     String   @default("new")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}